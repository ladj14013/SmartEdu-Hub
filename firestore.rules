rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows anyone with access to your Project ID to read, write, and delete
    // all data in your Firestore database. It is not secure.
    // Make sure to restrict access before deploying to production.
    // For more information, see https://firebase.google.com/docs/firestore/security/get-started
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
