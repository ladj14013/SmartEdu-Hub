rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to general educational structure and settings
    match /stages/{stageId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == 'DIRECTOR_UID'; // Restrict writes
    }

    match /levels/{levelId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == 'DIRECTOR_UID'; // Restrict writes
    }

    match /subjects/{subjectId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == 'DIRECTOR_UID'; // Restrict writes
    }
    
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == 'DIRECTOR_UID'; // Restrict writes
    }

    // Default deny: All other collections require authentication to read or write
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
